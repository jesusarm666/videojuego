import pygame

AMARILLO = (255, 255, 0)
RADIO_MONEDA = 10  # Radio de la moneda

class Moneda(pygame.sprite.Sprite):
    def __init__(self, x, y):
        super().__init__()
        # Creamos una superficie con alfa para que sea transparente fuera del círculo.
        diametro = RADIO_MONEDA * 2
        self.image = pygame.Surface((diametro, diametro), pygame.SRCALPHA)
        pygame.draw.circle(self.image, AMARILLO, (RADIO_MONEDA, RADIO_MONEDA), RADIO_MONEDA)
        # Ubicamos el centro de la moneda en la posición (x, y)
        self.rect = self.image.get_rect(center=(x, y))

    def actualizar_moneda_prueba(self):
        # Agregar animaciones o efectos (giro, flotado, etc.)
        pass

print("Módulo recolectables cargado correctamente")